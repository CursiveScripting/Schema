{
  "$schema": "http://json-schema.org/schema#",
  "$id": "https://cursivescripting.github.io/Schema/processes.json",
  
  "definitions": {
    "parameter": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "type": { "type": "string" }
      },
      "required": ["name", "type"]
    },
    "parameters": {
      "type": "array",
      "uniqueItems": true,
      "items": { "$ref": "#/definitions/parameter" }
    },
    "position": {
      "type": "object",
      "properties": {
        "x": { "type": "integer" },
        "y": { "type": "integer" }
      },
      "required": ["x", "y"]
    },
    "nameMap": {
      "type": "object",
      "properties": {},
      "additionalProperties": { "type": "string" }
    },
    "step": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/position" },
        {
          "properties": {
            "id": { "type": "string" }
          },
          "required": ["id"]
        }
      ]
    },
    "stepWithInput": {
      "type": "object",
      "allOf": [
        { "$ref": "#/definitions/step" },
        {
          "properties": {
            "inputs": { "$ref": "#/definitions/nameMap" }
          }
        }
      ]
    }
  },
  
  "type": "array",
  "items": {
    "type": "object",
    "properties": {
      "name": { "type": "string" },
      "description": { "type": "string" },
      "folder": { "type": "string" },
      "inputs": { "$ref": "#/definitions/parameters" },
      "outputs": { "$ref": "#/definitions/parameters" },
      "returnPaths": {
        "type": "array",
        "uniqueItems": true,
        "minItems": 2,
        "items": { "type": "string" }
      },
      "variables": {
        "type": "array",
        "items": {
          "type": "object",
          "allOf": [
            { "$ref": "#/definitions/parameter" },
            { "$ref": "#/definitions/position" },
            {
              "properties": {
                "initialValue": { "type": "string" }
              }
            }
          ]
        }
      },
      "steps": {
        "type": "array",
        "items": [
          {
            "type": "object",
            "allOf": [
              { "$ref": "#/definitions/step" },
              {
                "properties": {
                  "type": { "const": "start" },
                  "outputs": { "$ref": "#/definitions/nameMap" },
                  "returnPath": { "type": "string" }
                },
                "required": ["type"]
              }
            ]
          }
        ],
        "additionalItems": {
          "type": "object",
          "oneOf": [
            {
              "allOf": [
                { "$ref": "#/definitions/stepWithInput" },
                {
                  "properties": {
                    "type": { "const": "process" },
                    "outputs": { "$ref": "#/definitions/nameMap" }
                  },
                  "required": ["type"]
                },
                {
                  "oneOf": [
                    {
                      "properties": {
                        "returnPath": { "type": "string" }
                      },
                      "required": [ "returnPaths" ]
                    },
                    {
                      "properties": {
                        "returnPaths": { "$ref": "#/definitions/nameMap" }
                      },
                      "required": ["returnPaths"]
                    }
                  ]
                }
              ]
            },
            {
              "allOf": [
                { "$ref": "#/definitions/stepWithInput" },
                {
                  "properties": {
                    "type": { "const": "stop" },
                    "name": { "type": "string" }
                  },
                  "required": ["type"]
                }
              ]
            }
          ]
        }
      }
    },
    "required": ["name"]
  }  
}